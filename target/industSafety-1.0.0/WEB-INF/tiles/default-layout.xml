<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<definition name="layouts-tiles" template="/WEB-INF/tiles/template.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/include/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/jsp/include/footer.jsp" />
	</definition>
	
	<definition name="*.tiles" extends="layouts-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/egovframework/{1}.jsp" />
	</definition>
	
	<definition name="*/*.tiles" extends="layouts-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/egovframework/{1}/{2}.jsp" />
	</definition>
	
	<definition name="*/*/*.tiles" extends="layouts-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/egovframework/{1}/{2}/{3}.jsp" />
	</definition>
	
	<definition name="*/*/*/*.tiles" extends="layouts-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/egovframework/{1}/{2}/{3}/{4}.jsp" />
	</definition>
</tiles-definitions>